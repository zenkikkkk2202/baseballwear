
.header
  .header__logo
    BaseballWear
  .header__image
    image(仮）
  .header__team
    = current_user.favorite_team
  .header__name
    = link_to user_path(current_user) do
      = current_user.nickname
  .header__link
    .header__link__edit
      = link_to edit_user_path(current_user) do
        ユーザー編集
    .header__link__post
      = link_to new_post_path do
        投稿



.main__searchform
  = form_with(url: search_posts_path, local: true,method: :get) do |f|
    = f.text_field :keyword, placeholder: "チーム検索"
    = f.submit "検索"


.main__post
  %ul.main__post__box
    - if @posts
      - @posts.each do |post|
        %li.main__post__box__image
          = image_tag post.image.to_s, size: "350x500"
          %ul.main__post__box__image__text
            .main__post__box__image__text__2
              %li チーム名
              = post.team
              %li 投稿時間
              = post.created_at
              = link_to "Detail", "/posts/#{post.id}"
  .main__post__page
  = paginate(@posts)