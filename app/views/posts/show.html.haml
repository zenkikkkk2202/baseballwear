= render partial: "header"

.main
  .main__searchform
    = form_with(url: search_posts_path, local: true,method: :get) do |f|
      = f.text_field :keyword, placeholder: "チーム検索"
      = f.submit "検索"
  - if user_signed_in? && current_user.id == @post.user_id 
    .main__manuplate
      = link_to "/posts/#{@post.id}",method: :delete do
        削除
      = link_to "/posts/#{@post.id}/edit" do
        編集 
  -# = render partial: 'posts/posts', collection: @posts, as: :post
  .main__content

    .main__content__image
      %p= image_tag @post.image.to_s,size: :"550x600"
      
    .main__content__text
      %pチーム名
      = @post.team
      %pテキスト
      = @post.text
      %p投稿者名
      = @post.user.nickname
      %pオンラインショップサイト
      - if @post.team == "ジャイアンツ"
        =link_to "公式サイト", "https://store.giants.jp/store/"
      - elsif @post.team == "ベイスターズ"
        =link_to "公式サイト", "https://ec.baystars.co.jp/"
      - elsif @post.team == "タイガース"
        =link_to "公式サイト", "https://shop.hanshintigers.jp/"
      - elsif @post.team == "カープ"
        =link_to "公式サイト", "https://www.shop.carp.co.jp/"
      - elsif @post.team == "ドラゴンズ"
        =link_to "公式サイト", "https://dragonsshop.info/"
      - elsif @post.team == "スワローズ"
        =link_to "公式サイト", "https://shop.yakult-swallows.co.jp/"
      - elsif @post.team == "ライオンズ"
        =link_to "公式サイト", "https://store.seibulions.jp/"
      - elsif @post.team == "ホークス"
        =link_to "公式サイト", "https://www.softbankhawksstore.jp/"
      - elsif @post.team == "イーグルス"
        =link_to "公式サイト", "https://www.rakuten.ne.jp/gold/rakuteneagles/"
      - elsif @post.team == "マリーンズ"
        =link_to "公式サイト", "https://www.marines.co.jp/goods/index.html"
      - elsif @post.team == "ファイターズ"
        =link_to "公式サイト", "https://shop.fighters.co.jp/shopping/"
      - elsif @post.team == "バファローズ"
        =link_to "公式サイト", "https://shop.buffaloes.co.jp/"
      
      %pコメント一覧
      - if @comments
        - @comments.each do |c|
          %p
            = c.text 
            = c.user.nickname
    .main__content__comment
      -if current_user
        = form_for [@post,@comment] do |f|
          = f.text_field :text, placeholder: "コメント投稿"
          = f.submit "Send"
      - else 
        %p コメント投稿にはログインが必要です
